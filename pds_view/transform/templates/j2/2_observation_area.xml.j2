    <Observation_Area>
        <Time_Coordinates>
        {%- if label.START_TIME and label.START_TIME|trim not in ('"N/A"', '"NULL"', '"UNK"') %}
            <start_date_time>{{label.START_TIME}}{%- if not label.START_TIME.strip().endswith("Z")  -%}Z{%- endif -%}</start_date_time>
            {%- else -%}
            <start_date_time xsi:nil="true"></start_date_time>
        {%- endif -%}
        {%- if label.STOP_TIME and label.STOP_TIME|trim not in ('"N/A"', '"NULL"', '"UNK"') %}
            <stop_date_time>{{label.STOP_TIME}}{%- if not label.STOP_TIME.strip().endswith("Z")  -%}Z{%- endif -%}</stop_date_time>
            {%- else -%}
            <stop_date_time> xsi:nil="true"></stop_date_time>
        {%- endif %}
        </Time_Coordinates>
        <Investigation_Area>
            {% if label.MISSION_NAME or  label.MISSION_PHASE_NAME -%} 
            <name>{%- if label.MISSION_NAME -%}{{label.MISSION_NAME|lower}}{%- else -%}{{label.MISSION_PHASE_NAME|lower}}{%- endif -%}</name>
            {%- endif %}
            <type>Mission</type>
            <Internal_Reference>
                <lid_reference>urn:nasa:pds:investigation.{%- if label.MISSION_NAME -%}{{label.MISSION_NAME|lower|replace(" ", ".")}}{%- else -%}{{label.MISSION_PHASE_NAME|lower|replace(" ", ".")}}{%- endif -%}</lid_reference>
                <reference_type>data_to_investigation</reference_type>
            </Internal_Reference>
        </Investigation_Area>
        <Observing_System>
            {% if label.INSTRUMENT_HOST_NAME -%}
            <Observing_System_Component>
                <name>{{label.INSTRUMENT_HOST_NAME|lower}}</name>
                <type>Spacecraft</type>
            </Observing_System_Component>
            {%- endif -%}
            {% if label.INSTRUMENT_NAME or label.INSTRUMENT_ID -%}
            <Observing_System_Component>
                <name>{%- if label.INSTRUMENT_NAME -%}{{label.INSTRUMENT_NAME|lower}}{%- else -%}{{label.INSTRUMENT_ID|lower}}{%- endif -%}</name>
                <type>Instrument</type>
            </Observing_System_Component>
            {%- endif %}
        </Observing_System>
        <Target_Identification>
            {% if label.TARGET_NAME -%}
            <name>{{label.TARGET_NAME|lower}}</name>
            <type>Planet</type>
            {%- endif %}
        </Target_Identification>
    </Observation_Area>